# Flask Application Settings
FLASK_APP=backend/app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///freelance_platform.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/freelance_platform

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=86400  # 1 day in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# URL Configuration
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=FreelancePro SL <your-email@gmail.com>

# Mobile Money API Configurations
# Orange Money
ORANGE_API_KEY=your-orange-api-key
ORANGE_API_URL=https://api.orange.com/payment/v1

# Africell
AFRICELL_API_KEY=your-africell-api-key
AFRICELL_API_URL=https://api.africell.sl/payment/v1

# Qcell
QCELL_API_KEY=your-qcell-api-key
QCELL_API_URL=https://api.qcell.sl/payment/v1

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,txt

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
